<?xml version="1.0" encoding="UTF-8"?>
<project name="module_hongbao" default="compile.module.hongbao">
  <dirname property="module.hongbao.basedir" file="${ant.file.module_hongbao}"/>
  
  <property name="module.jdk.home.hongbao" value=""/>
  <property name="module.jdk.bin.hongbao" value=""/>
  <property name="module.jdk.classpath.hongbao" value=""/>
  
  <property name="compiler.args.hongbao" value="-encoding UTF-8 -source 8 -target 1.7 ${compiler.args}"/>
  
  <property name="hongbao.output.dir" value="undefined"/>
  <property name="hongbao.testoutput.dir" value="undefined"/>
  
  <path id="hongbao.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="hongbao.module.production.classpath"/>
  
  <path id="hongbao.runtime.production.module.classpath"/>
  
  <path id="hongbao.module.classpath"/>
  
  <path id="hongbao.runtime.module.classpath"/>
  
  
  <patternset id="excluded.from.module.hongbao">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.hongbao">
    <patternset refid="excluded.from.module.hongbao"/>
  </patternset>
  
  
  <target name="compile.module.hongbao" depends="compile.module.hongbao.production,compile.module.hongbao.tests" description="Compile module hongbao"/>
  
  <target name="compile.module.hongbao.production" depends="register.custom.compilers" description="Compile module hongbao; production classes"/>
  
  <target name="compile.module.hongbao.tests" depends="register.custom.compilers,compile.module.hongbao.production" description="compile module hongbao; test classes" unless="skip.tests"/>
  
  <target name="clean.module.hongbao" description="cleanup module">
    <delete dir="${hongbao.output.dir}"/>
    <delete dir="${hongbao.testoutput.dir}"/>
  </target>
</project>